{

  "name": "axi_stream",
  "modports":{
    "in": "slave",
    "out": "master"
  },
  "default_specs":{
    "in_port":"stream_in",
    "out_port":"stream_out"
  },
  "components": {
    "uScope_stream":{
      "class":"sink",
      "type": "scope",
      "in_port":"data_in"
    },

    "axis_remapper":{
      "class":"interconnect",
      "type": "passthrough",
      "remapping": "true",
      "in_port":"in",
      "out_port":"out"
    },

    "axis_duplicator": {
      "class":"interconnect",
      "type":"1To2",
      "in_port":"in",
      "out_port":"out"
    },

    "axi_stream_combiner": {
      "class":"interconnect",
      "type":"nTo1",
      "n_sources":"N_STREAMS"
    },

    "AdcProcessing": {
      "class": "source",
      "type": "analog",
      "n_points": "N_CHANNELS",
      "fast_data_out": "fast",
      "filtered_data_out": ""
    },

    "axis_data_mover": {
      "class": "source",
      "type": "core",
      "n_points": "CHANNEL_NUMBER",
      "data_out": ""
    }
  }
}